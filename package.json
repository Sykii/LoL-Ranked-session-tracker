{
  "name": "lol-session-tracker",
  "version": "1.0.0",
  "description": "League of Legends ranked session tracker with overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.loltracker.app",
    "productName": "LoL Session Tracker",
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!build/"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}