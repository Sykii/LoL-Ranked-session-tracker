{
  "name": "lol-session-tracker",
  "version": "3.0.0",
  "description": "League of Legends ranked session tracker with Discord-style interface and overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.loltracker.app",
    "productName": "LoL Session Tracker",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LoL Session Tracker"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/electron-store/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
